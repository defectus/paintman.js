    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAfyHb-V7BBWmU2d24H5TAJwOl39_wjUGY&sensor=false')
    script
        $(document).ready(
            function () {
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 12,
                    zoomControl: true,
                    scaleControl: true,
                    mapTypeControl: false,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });
                new google.maps.Geocoder().geocode ({ 'address': 'Cigánkova 1175, Jaroměřice nad Rokytnou, 67551, Ceska Republika'}, function(results, status) {
                    if (status == google.maps.GeocoderStatus.OK) {
                        map.setCenter(results[0].geometry.location);
                        var marker = new google.maps.Marker({
                            map: map,
                            position: results[0].geometry.location
                        });
                    } else {
                        alert('Geocode was not successful for the following reason: ' + status);
                    }
                });

        });

